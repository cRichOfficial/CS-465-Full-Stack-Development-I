<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>{{title}} - Travlr Getaways</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{>header }}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
                            <div class="sidebar">
                                <h3>{{newsData.latest.name}}</h3>
                                <ul>
                                    {{#each newsData.latest.articles}}
                                        <li>
                                            <a href="{{this.url}}">{{this.title}}</a>
                                        </li>
                                    {{/each}}
                                </ul>
                                <h3>{{newsData.tips.name}}</h3>
                                <ul>
                                    {{#each newsData.latest.articles}}
                                        <li>
                                            <a href="{{this.url}}">{{this.title}}</a>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div>
                                <h1>{{title}}</h1>
                                <img src="images/{{newsData.main.image}}" alt="Img" />
                                <h2>{{newsData.main.title}}</h2>
                                <span class="time">{{newsData.main.date}} <br /> by: {{newsData.main.author}}</span>
                                {{{newsData.main.text}}}
                            </div>
						</div>
					</div>
				</div>
			</div>
			{{>footer }}
		</div>
	</div>
</body>
</html>